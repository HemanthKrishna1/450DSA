class Solution {
    public boolean searchMatrix(int[][] matrix, int target) {
        int row = matrix.length;
        int col = matrix[0].length;

        int start = 0;
        int end = (row*col)-1;

        while(start<=end){
            int mid = (start+end)/2;
            if(target > matrix[mid/col][mid%col]){
                start = mid+1;
            }else if (target < matrix[mid/col][mid%col]){
                end = mid-1;
            }else {
                return true;
            }
        }
        return false;
    }
}
